        android:hint="@string/edit_footprint_title_hint" />

    <EditText
        android:id="@+id/edit_text_footprint_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="@string/edit_footprint_title_description" />

</LinearLayout>